<!-- API functionality on parties entity-->
<resource xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/rest-api-3.xsd" name="TrainingAPI"
          displayName="REST API" version="2.0.0">
<!--    API for party entities-->
    <resource name="partyGET" require-authentication="anonymous-view">
        <id name="partyId">
            <method type="get">
                <entity name="Party" operation="one"/>
            </method>
        </id>
    </resource>

    <resource name="partyPOST" require-authentication="anonymous-all">
        <method type="post">
            <service name="moqui.training.TrainingServices.create#Party"/>
        </method>
    </resource>

    <resource name="partyPUT" require-authentication="anonymous-all">
        <id name="partyId">
            <method type="put">
<!--                <service name="moqui.training.TrainingServices.store#Party"/>-->
                <entity name="moqui.party.Party" operation="update"/>
            </method>
        </id>
    </resource>

    <resource name="partyDelete" require-authentication="anonymous-all">
        <id name="partyId">
            <method type="delete">
                <service name="moqui.training.TrainingServices.delete#Party"/>
            </method>
        </id>
    </resource>
<!--    API to get session token-->
    <resource name="login" require-authentication="anonymous-all">
        <method type="get">
            <service name="moqui.training.TrainingServices.login#User"/>
        </method>
    </resource>

<!--    API for product entity-->
    <resource name="productGET" require-authentication="anonymous-all">
        <id name="productId">
            <method type="get">
                <entity name="Product" operation="one"/>
            </method>
        </id>
    </resource>

    <resource name="productPOST" require-authentication="anonymous-all">
        <method type="post">
            <service name="moqui.training.TrainingServices.create#Product"/>
        </method>
    </resource>

    <resource name="productPUT" require-authentication="anonymous-all">
        <id name="productId">
            <method type="put">
                <entity name="moqui.product.Product" operation="update"/>
            </method>
        </id>
    </resource>
    
    <resource name="productDelete" require-authentication="anonymous-all">
        <id name="productId">
            <method type="delete">
                <service name="moqui.training.TrainingServices.delete#Product"/>
            </method>
        </id>
    </resource>

<!--    API for order header entity-->
    <resource name="orderPOST" require-authentication="anonymous-all">
        <method type="post">
            <service name="moqui.training.TrainingServices.create#OrderHeader"/>
        </method>
    </resource>

    <resource name="orderGET" require-authentication="anonymous-all">
        <id name="orderId">
            <method type="get">
                <entity name="OrderHeader" operation="one"/>
            </method>
        </id>
    </resource>
</resource>


